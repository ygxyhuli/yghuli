<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/icon_background"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/assess_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_background_kuang" />

        <Button
            android:id="@+id/assess_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/assess_reference"
            android:layout_alignStart="@+id/assess_reference"
            android:layout_below="@+id/assess_reference"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:background="@mipmap/icon_start_assess"
            android:drawableBottom="@null"
            android:shadowRadius="@null"
            android:text="下一步"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/start_assess"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:background="@mipmap/icon_start_assess"
            android:drawableBottom="@null"
            android:shadowRadius="@null"
            android:text="开始评估"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/assess_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/start_assess"
            android:layout_alignStart="@+id/start_assess"
            android:layout_below="@+id/start_assess"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@mipmap/icon_start_assess"
            android:drawableBottom="@null"
            android:shadowRadius="@null"
            android:text="评估参考"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/assess_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/assess_reference_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="评估参考内容是："
            android:textSize="16sp" />

        <Button
            android:id="@+id/assess_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/login_btn_style"
            android:text="关闭"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>