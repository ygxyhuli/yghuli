<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
                android:id="@+id/videocontroller1"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="15sp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/tv_problem_show" />

            <RelativeLayout
                android:id="@+id/selectArea"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_video1"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <ImageView
                        android:id="@+id/image_select1"
                        android:layout_alignTop="@+id/image_video1"
                        android:src="@drawable/icon_select"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_video2"
                        android:layout_alignParentRight="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />
                    <ImageView
                        android:id="@+id/image_select2"
                        android:layout_alignTop="@+id/image_video2"
                        android:src="@drawable/icon_select"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/vedio_submit"
                android:background="@drawable/shape_submit"
                android:textSize="15sp"
                android:text="提交"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="36dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>