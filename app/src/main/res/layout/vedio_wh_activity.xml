<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
                android:id="@+id/videocontroller2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnP1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="第一部分"
                    android:layout_weight="0.01" />
                <Button
                    android:layout_marginLeft="8dp"
                    android:id="@+id/btnP2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="第二部分"
                    android:layout_weight="0.01" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="15sp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:text="大侠，开始找错吧：" />

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
                android:id="@+id/videocontroller3"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:id="@+id/answerArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:text="选择题：" />

                <TextView
                    android:id="@+id/tv_error_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="A. 核对患者信息不完整" />

                <TextView
                    android:id="@+id/tv_error_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:text="B. 核对患者手腕带时未打下床栏" />

                <TextView
                    android:id="@+id/tv_error_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:text="C. 未评估患者伤口情况" />

                <TextView
                    android:id="@+id/tv_error_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:text="D. 未戴口罩" />

                <TextView
                    android:id="@+id/tv_error_e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:text="E. 未评估病房环境" />
                <TextView
                    android:id="@+id/tv_error_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_error_g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:text="" />

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="18dp"
                    android:text="查看解析"
                    android:textSize="15sp"
                    android:visibility="invisible" />
            </RelativeLayout>


            <Button
                android:id="@+id/vedio_submit"
                android:background="@drawable/shape_submit"
                android:textSize="15sp"
                android:text="下一题"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="36dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>